<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.balarajum.questionbank.MainActivity">

    <TextView
        android:layout_gravity="top"
        android:id="@+id/questn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:textAlignment="center"
        android:textColor="@color/bg_Screen3"
        android:padding="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:text="@string/q1"/>
    <LinearLayout
        android:layout_gravity="center|center_horizontal"
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/questn">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/true_btn"
            android:background="#2E8B57"
            android:textColor="@android:color/white"
            android:drawablePadding="15dp"
            android:textSize="20dp"
            android:id="@+id/true_btn"
            android:layout_margin="5dp"
            />
        <Button
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/false_btn"
            android:textColor="@android:color/white"
            android:background="@color/dot_dark_Screen1"
            android:textSize="20dp"
            android:id="@+id/false_btn"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Next_qustn"
            android:textColor="@android:color/white"
            android:id="@+id/next_btn"
            android:layout_below="@id/liner1"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@color/dot_loght_Screen4"
            android:layout_alignParentBottom="true"
            />
    </LinearLayout>

</FrameLayout>
